<h1>Books</h1>

<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>


<table>
	<thead>
			<tr>
				<th>Name</th>
				<th>Author</th>
				<th colspan="2">Actions</th>
			</tr>
	</thead>
	<tbody>

		<% @books.each do |book| %>
			<tr>
				<td>
					<%= book.name %>
				</td>
				<td>
					<%= book.author %>
				</td>
				<td>
					<%= link_to "edit_book_#{book.id}", edit_book_path(book) %>
				</td>
				<td>
					<%= link_to "delete_book_#{book.id}", book, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
				</td>
			</tr>
		<% end %>
</tbody>
</table>

<%= link_to "Add book", new_book_path %>




