<h2>
	Update book
</h2>

<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>

<%= form_with model: @book, url: "/books/#{@book.id}", method: :put, local: true do |form| %>
	  <%= form.text_field :name %>
		<%= form.text_field :author %>

          <%= form.submit "save" %>

<% end %>